<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wheel"
    android:id="@+id/root_fl"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">

    <!--语音设置页面-->
    <ImageView
        android:id="@+id/settings_iv"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/settings2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/transparent"
            android:id="@+id/star_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/star_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_normal"/>
            <ImageView
                android:id="@+id/star_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_normal"/>
            <ImageView
                android:id="@+id/star_iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_normal"/>
            <ImageView
                android:id="@+id/star_iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/star_normal"/>
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_below="@id/star_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <LinearLayout
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="276px"
                    android:gravity="right|center_vertical">

                    <com.chinatsp.ifly.view.AnimationImageView
                        android:layout_marginRight="10dp"
                        android:id="@+id/iv_anim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="276px"
                    android:gravity="left|center_vertical">

                    <TextView
                        android:id="@+id/greeting_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="70px"
                        android:text=""
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/btn_rl"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/go_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_learn"/>
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/pass_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_pass"/>
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/exit_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_exit"/>
                </LinearLayout>
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow2"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <!--过关页面-->
    <LinearLayout
        android:id="@+id/fireworks_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <com.chinatsp.ifly.view.AnimationImageView
                android:id="@+id/iv_anim1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <com.chinatsp.ifly.view.AnimationImageView

                    android:id="@+id/iv_anim2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.chinatsp.ifly.view.AnimationImageView
                    android:layout_marginRight="10dp"
                    android:id="@+id/iv_anim3"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.chinatsp.ifly.view.AnimationImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_anim4"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <!--语音唤醒按钮-->
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="20dp">
        <ImageView
            android:id="@+id/btn_iv"
            android:src="@mipmap/btn_light"
            android:layout_x="1074px"
            android:layout_y="293px"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </AbsoluteLayout>

</FrameLayout>