<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/key_action_bg">

    <ImageView
        android:focusable="false"
        android:id="@+id/iv_close"
        android:layout_width="58px"
        android:layout_height="58px"
        android:layout_alignParentEnd="true"
        android:src="@drawable/selector_btn_close" />


    <TextView
        android:id="@+id/top_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105px"
        android:textColor="@color/white"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/center_iv"
        android:layout_width="182px"
        android:layout_height="182px"
        android:layout_below="@+id/top_tip_tv"
        android:layout_centerHorizontal="true"
        android:src="@drawable/key_down" />

    <TextView
        android:id="@+id/bot_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52px"
        android:includeFontPadding="false"
        android:textColor="#999999"
        android:textSize="36px" />
</RelativeLayout>