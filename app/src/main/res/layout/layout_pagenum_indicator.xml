<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5px"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FullScreenActivity">

    <ImageView
        android:id="@+id/iv_last_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_last_page" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:background="@drawable/ic_line_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="34px"
        android:paddingBottom="34px">

        <TextView
            android:id="@+id/tv_pagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="#00a1ff"
            android:textSize="36px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26px"
            android:layout_marginBottom="26px"
            android:background="@drawable/ic_line_honriental"
            android:rotation="135" />

        <TextView
            android:id="@+id/tv_page_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06"
            android:textColor="#666c78"
            android:textSize="36px" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16px"
        android:background="@drawable/ic_line_vertical" />

    <ImageView
        android:id="@+id/iv_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_next_page" />
</LinearLayout>