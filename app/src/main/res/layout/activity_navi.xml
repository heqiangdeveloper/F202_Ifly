            android:padding="10dp"
            android:text="周边搜索" />

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:text="关键字搜索" />

        <TextView
            android:id="@+id/tv_8"
