<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_xiaoo"
        android:layout_width="386px"
        android:layout_height="276px"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_xiaoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_xiaoo_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/iv_xiaoo_voice"
            android:layout_width="224px"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_voice"
            android:gravity="center">

            <ImageView
                android:layout_width="46px"
                android:layout_height="50px"
                android:src="@drawable/ic_left_voice" />

            <ImageView
                android:layout_width="46px"
                android:layout_height="50px"
                android:layout_marginLeft="54px"
                android:src="@drawable/ic_voice_unselected" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_xiaoo_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_xiaoo_voice"
            android:layout_alignStart="@id/iv_xiaoo_voice"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="24px"
            android:background="@drawable/bg_drive_small_master"
            android:gravity="center"
            android:paddingBottom="6px"
            android:text="第二个"
            android:textColor="#00a1ff"
            android:textSize="36px"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_xiaoo_setting"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_alignTop="@id/iv_xiaoo_voice"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="14px"
            android:layout_toRightOf="@id/iv_xiaoo_voice"
            android:src="@drawable/ic_setting" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_xiaoo_prompt"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_xiaoo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        android:gravity="center_horizontal"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="74dp"
        android:lineSpacingExtra="28px"
        android:text="你确定导航到观音桥吗，或说第几个"
        android:textColor="@color/white"
        android:textSize="36px" />

</RelativeLayout>