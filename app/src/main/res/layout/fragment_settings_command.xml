<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tb_command"
            android:layout_width="wrap_content"
            android:layout_height="110px"
            android:layout_marginStart="32px"
            android:paddingTop="40px"
            android:visibility="visible"
            app:tabIndicatorColor="#00A1FF"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="4px"
            app:tabMaxWidth="280px"
            app:tabMinWidth="140px"
            app:tabRippleColor="@null"
            app:tabBackground="@null"
            app:tabMode="fixed"
            app:tabPaddingBottom="0px"
            app:tabPaddingEnd="36px"
            app:tabPaddingStart="36px"
            app:tabPaddingTop="0px" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vw_command_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/command_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>