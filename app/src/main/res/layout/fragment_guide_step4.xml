<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/root_ll"

    tools:context=".GuideMainActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_x="805px"
            android:layout_y="35px"
            android:id="@+id/star_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="887px"
            android:layout_y="35px"
            android:id="@+id/star_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="969px"
            android:layout_y="35px"
            android:id="@+id/star_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="1051px"
            android:layout_y="35px"
            android:id="@+id/star_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <com.chinatsp.ifly.view.AnimationImageView
            android:id="@+id/iv_anim"
            android:layout_x="120px"
            android:layout_y="116px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_x="536px"
            android:layout_y="190px"
            android:id="@+id/greeting_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:text=""
            android:textColor="@color/white"/>
        <TextView
            android:layout_x="533px"
            android:layout_y="305px"
            android:id="@+id/greeting_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text=""
            android:textColor="@color/white"/>
    </AbsoluteLayout>

</LinearLayout>