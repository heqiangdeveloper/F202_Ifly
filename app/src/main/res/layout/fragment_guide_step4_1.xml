<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1790px"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/root_ll"
    tools:context=".GuideMainActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_x="805px"
            android:layout_y="35px"
            android:id="@+id/star_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="887px"
            android:layout_y="35px"
            android:id="@+id/star_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="969px"
            android:layout_y="35px"
            android:id="@+id/star_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="1051px"
            android:layout_y="35px"
            android:id="@+id/star_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <TextView
            android:layout_x="774px"
            android:layout_y="249px"
            android:id="@+id/greeting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text=""
            android:textColor="@color/white"/>
        <Button
            android:layout_x="852px"
            android:layout_y="540px"
            android:id="@+id/pass_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_pass"/>
        <ImageView
            android:visibility="gone"
            android:layout_x="1430px"
            android:layout_y="540px"
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow1"/>
    </AbsoluteLayout>

</LinearLayout>