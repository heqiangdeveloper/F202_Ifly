<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130px"
    android:layout_marginBottom="14px"
    android:background="@drawable/bg_list"
    android:paddingLeft="50px"
    android:paddingRight="50px">


    <TextView
        android:id="@+id/tv_plane_number"
        style="@style/style_text_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="-" />

    <RelativeLayout android:id="@+id/rl_plane_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="64px"
        android:layout_toRightOf="@id/tv_plane_number">

        <TextView
            android:id="@+id/tv_plane_origin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_plane_origin_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plane_origin_time"
            android:layout_alignStart="@id/tv_plane_origin_time"
            android:layout_marginTop="14px"
            android:text="-"
            android:textColor="#999999"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_plane_air"
            android:layout_width="76px"
            android:layout_height="6px"
            android:layout_marginLeft="38px"
            android:layout_marginTop="12px"
            android:layout_toRightOf="@id/tv_plane_origin_time"
            android:src="@drawable/ic_air" />

        <TextView
            android:id="@+id/tv_plane_dest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48px"
            android:layout_toRightOf="@id/iv_plane_air"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_plane_dest_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plane_dest_time"
            android:layout_alignStart="@id/tv_plane_dest_time"
            android:layout_marginTop="14px"
            android:text="-"
            android:textColor="#999999"
            android:textSize="28px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_plane_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="#8b8b8b"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_plane_tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26px"
                android:text="-"
                android:textColor="#8b8b8b"
                android:textSize="36px"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_plane_accurate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_right"
            android:layout_alignRight="@id/ll_right"
            android:layout_marginTop="14px"
            android:text="-"
            android:textColor="#999999"
            android:textSize="28px"
            android:visibility="invisible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_plane_info"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plane_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:gravity="center_vertical"
            android:textColor="#ffde00"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_plane_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="14px"
            android:text="-"
            android:textColor="#8b8b8b"
            android:textSize="28px" />

    </LinearLayout>

</RelativeLayout>