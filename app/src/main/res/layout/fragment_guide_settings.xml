<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/root_ll"
    tools:context=".GuideMainActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_x="805px"
            android:layout_y="35px"
            android:id="@+id/star_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="887px"
            android:layout_y="35px"
            android:id="@+id/star_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="969px"
            android:layout_y="35px"
            android:id="@+id/star_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="1051px"
            android:layout_y="35px"
            android:id="@+id/star_iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/star_normal"/>
        <ImageView
            android:layout_x="1420px"
            android:layout_y="20px"
            android:id="@+id/settings_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/settings2"/>
        <TextView
            android:layout_x="404px"
            android:layout_y="282px"
            android:id="@+id/greeting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text=""
            android:textColor="@color/white"/>
        <ImageView
            android:visibility="gone"
            android:layout_x="1504px"
            android:layout_y="400px"
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow2"/>
    </AbsoluteLayout>
    <ImageView
        android:id="@+id/mask_iv"
        android:visibility="gone"
        android:layout_width="2020px"
        android:layout_height="wrap_content"
        android:src="@mipmap/mask_settings"/>
</FrameLayout>