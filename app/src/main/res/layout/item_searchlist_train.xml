<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130px"
    android:layout_marginBottom="14px"
    android:background="@drawable/bg_list"
    android:paddingLeft="25px"
    android:paddingRight="25px">


    <TextView
        android:id="@+id/tv_train_number"
        style="@style/style_text_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48px"
        android:layout_toRightOf="@id/tv_train_number">

        <TextView
            android:id="@+id/tv_train_origin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/iv_train_start"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_below="@id/tv_train_origin_time"
            android:layout_alignStart="@id/tv_train_origin_time"
            android:layout_marginTop="14px"
            android:src="@drawable/ic_text_start" />

        <TextView
            android:id="@+id/tv_train_origin_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_train_start"
            android:layout_toRightOf="@id/iv_train_start"
            android:text=""
            android:textColor="#999999"
            android:textSize="28px" />


        <LinearLayout
            android:id="@+id/ll_train_air"
            android:layout_width="172px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_train_origin_time"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_train_during_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#999999"
                android:textSize="20px" />

            <ImageView
                android:layout_width="76px"
                android:layout_height="6px"
                android:src="@drawable/ic_air" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_train_dest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_train_air"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_train_dest_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_train_dest_time"
            android:layout_toRightOf="@id/tv_train_dest_time"
            android:text="+1"
            android:layout_marginBottom="3px"
            android:textColor="@color/white"
            android:textSize="20px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_train_dest_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_train_dest_time"
            android:layout_alignEnd="@id/tv_train_dest_time"
            android:layout_alignTop="@id/tv_train_origin_site"
            android:text=""
            android:textColor="#999999"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_train_end"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignTop="@id/iv_train_start"
            android:layout_toLeftOf="@id/tv_train_dest_site"
            android:src="@drawable/ic_text_end" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_train_seat_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textColor="#8b8b8b"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_train_seat_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_train_seat_2"
            android:layout_marginRight="5px"
            android:layout_toLeftOf="@id/tv_train_seat_2"
            android:text=""
            android:textColor="#8b8b8b"
            android:textSize="28px" />


        <TextView
            android:id="@+id/tv_train_seat_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_train_seat_2"
            android:layout_alignRight="@id/tv_train_seat_2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14px"
            android:text=""
            android:textColor="#999999"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_train_seat_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_train_seat_4"
            android:layout_marginRight="5px"
            android:layout_toLeftOf="@id/tv_train_seat_4"
            android:text=""
            android:textColor="#999999"
            android:textSize="28px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="465px">

        <TextView
            android:id="@+id/tv_train_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffde00"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_train_text_qi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_train_price"
            android:layout_toRightOf="@id/tv_train_price"
            android:layout_marginBottom="3px"
            android:text="èµ·"
            android:textColor="#ffde00"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_train_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_train_text_qi"
            android:layout_alignEnd="@id/tv_train_text_qi"
            android:layout_marginTop="14px"
            android:text=""
            android:textColor="#8b8b8b"
            android:textSize="28px" />

    </RelativeLayout>

</RelativeLayout>