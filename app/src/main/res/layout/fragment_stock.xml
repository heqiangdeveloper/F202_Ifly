<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1376px"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/alpha_05_black"
    tools:context=".FullScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView android:id="@+id/tv_stock_open_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#009900"
            android:textSize="28px" />


        <TextView android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView android:id="@+id/tv_stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#009900"
                android:textSize="70px" />

            <ImageView android:id="@+id/iv_stock_down_up"
                android:layout_width="34px"
                android:layout_height="50px"
                android:layout_gravity="bottom"
                android:layout_marginLeft="28px"
                android:layout_marginBottom="20px"
                android:src="@drawable/ic_stock_down"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_stock_trading_suspension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50px"
                android:text=""
                android:textColor="@color/white"
                android:textSize="28px"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:orientation="vertical">

                <TextView android:id="@+id/tv_stock_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#009900"
                    android:textSize="28px" />

                <TextView android:id="@+id/tv_stock_range_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#009900"
                    android:textSize="28px" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="1202px"
        android:layout_height="220px"
        android:layout_marginTop="36px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_list"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_price_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text=""
                android:textColor="#ff0000"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_price_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text=""
                android:textColor="#009900"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="量比"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_quantity_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="-"
                android:textColor="#999999"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交量"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_turnover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="-"
                android:textColor="#999999"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换手率"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_turnover_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="-"
                android:textColor="#999999"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总市值"
                android:textColor="#999999"
                android:textSize="36px" />

            <TextView android:id="@+id/tv_stock_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="-"
                android:textColor="#999999"
                android:textSize="36px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>