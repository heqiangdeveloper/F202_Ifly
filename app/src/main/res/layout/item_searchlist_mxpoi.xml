<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130px"
    android:layout_marginBottom="14px"
    android:background="@drawable/bg_list"
    android:paddingLeft="58px"
    android:paddingRight="58px">


    <TextView
        android:id="@+id/tv_poi_number"
        style="@style/style_text_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="01" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="64px"
        android:layout_toRightOf="@id/tv_poi_number">

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="320px"
            android:text="观音桥"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_poi_tag"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_poi_name"
            android:layout_marginLeft="28px"
            android:layout_toRightOf="@id/tv_poi_name"
            android:background="@drawable/bg_poi_green"
            android:paddingStart="10px"
            android:paddingTop="4px"
            android:paddingEnd="10px"
            android:paddingBottom="4px"
            android:text="商业步行街"
            android:textColor="#91ff10"
            android:textSize="28px"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_poi_address"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_poi_name"
            android:layout_alignStart="@id/tv_poi_name"
            android:layout_marginTop="14px"
            android:ellipsize="end"
            android:lines="1"
            android:text="中国重庆市江北区观音桥"
            android:textColor="#999999"
            android:textSize="28px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="602px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:text="人均： ¥50"
            android:textColor="#999999"
            android:textSize="28px"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_poi_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call" />

        <TextView
            android:id="@+id/tv_poi_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="2.3"
            android:textColor="@color/white"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 公里"
            android:textColor="#999999"
            android:textSize="36px" />

    </LinearLayout>
</RelativeLayout>